</servlet-mapping>
    
<servlet>
    <servlet-name>AddProductServlet</servlet-name>
    <servlet-class>skindemo.AddProductServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AddProductServlet</servlet-name>
    <url-pattern>/AddProductServlet</url-pattern>
</servlet-mapping>

<servlet>
