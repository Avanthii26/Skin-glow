<servlet-mapping>
    <servlet-name>ViewUsersServlet</servlet-name>
    <url-pattern>/ViewUsersServlet</url-pattern>
</servlet-mapping>


    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>skindemo.CartServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
